<div class="row justify-content-center">
  <div class="col-6">
    <h2>Đăng nhập</h2>
    <%- msg.length ? `
    <div class="alert alert-${msgType}">${msg}</div>
    `: ''; %>
    <form action="" method="post">
      <div class="mb-3">
        <label for="">Email</label>
        <input
          type="email"
          class="form-control"
          name="email"
          placeholder="Email..."
          required
        />
      </div>
      <div class="mb-3">
        <label for="">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Email..."
          required
        />
      </div>
      <div class="d-grid">
        <button class="btn btn-primary">Đăng nhập</button>
        <a href="/auth/register" class="mt-4 btn btn-primary">Đăng ký</a>
      </div>
    </form>
  </div>
</div>
