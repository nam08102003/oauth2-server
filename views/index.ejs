<!DOCTYPE html>
<html>
  <head>
    <title>Open Auth 2.0</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="mb-4">
      <a href="/auth/logout" class="btn btn-primary">Đăng xuất</a>
    </div>
    <a href="/create-app" class="btn btn-primary">Tạo ứng dụng mới</a>
    <h3 class="mt-3">Danh sách ứng dụng:</h3>
    <% if(typeof listApp !== "undefined" && listApp.length) { %>
    <ul>
      <% for(var i=0; i < listApp.length; i++) { %>
      <li>
        <a href="/app/<%= listApp[i].dataValues.id %>" class="block"
          ><%= listApp[i].dataValues.name %></a
        >
      </li>
      <% } %>
    </ul>
    <% } %>
  </body>
</html>
